<section id="products">
    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
                <img src="../../image/backgroundPinck.jpg" class="d-block w-100" alt="imagen1">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="../../image/backgroundViolet.jpg" class="d-block w-100" alt="imagen2">
            </div>
            <div class="carousel-item">
                <img src="../../image/ARTICULOS.png" class="d-block w-100" alt="imagen3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div id="productsContainer" class="container my-4">
        <div class="row ">
            <div class="card-columns">
                {{#each products}}
                    <div id="products" class="card m-2 p-4 float-start" style="width: 18rem; height:25rem;">
                        <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}" style="max-height:15rem; min-height:15rem;">
                        <div class="card-body">
                            <h5 style="color:#000" class="card-title">{{this.title}}</h5>
                            <br>
                            <div class="d-flex">    
                                <p class="card-text m-2 fs-5">${{this.price}}</p>
                                <a href="/api/products/{{this.id}}" class="btn btn-primary">Ver producto</a>
                            </div>
                        </div>
                    </div>
                {{/each}}

            </div>
        </div>
    </div>
</section>