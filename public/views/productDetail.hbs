<section class="d-flex justify-content-center m-5">
    <a id="arrow" href="/api/products" class="fa-solid fa-circle-arrow-left m-5"></a>
    <div class="card mb-3 mx-5" style="max-width: 540px;">
        <div class="row g-0">
            <div class="image-container col-md-4">
                <img src="{{producto.thumbnail}}" class="img-fluid rounded-start" alt="{{producto.title}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title" style="color: black;">{{producto.title}}</h5>
                    <p class="card-text">{{producto.description}}</p>
                    <p class="card-text mb-5"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                    <button class="m-5 px-3 py-2 float-end rounded-pill">Agregar al carrito</button>
                </div>
            </div>
        </div>
    </div>
</section>
    